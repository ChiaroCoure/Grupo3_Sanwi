<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/product-list.css">
  <%- include('../partials/head.ejs') %>
    <title>Sandwichs</title>
</head>

<body>
  <%- include('../partials/header.ejs') %>
    <main>
      <div class="list-ofertas">
        <h2>OFERTAS DEL DIA</h2>
        <div class="list-tarjetas-container">
          <% offers.forEach((prod)=> { %>
            <div class="list-img-container">
              <div class="list-capa-oscura"></div>
              <img src="img/<%=prod.img%>" alt="<%=prod.name%>">
            </div>
            <% }) %>
        </div>
      </div>
      <div class="list-products">
        <% products.forEach((prod)=> {%>
          <div class="list-tarjeta">
            <a href="/products/detail/<%= prod.id %>">
              <img src="img/<%=prod.img%>" alt="">
              <div class="list-text-container">
                <h3>
                  <%= prod.name %>
                </h3>
                <p class="list-price">
                  Precio: $ <%= prod.price %>
                </p>
                <p>
                  Descripci√≥n: <%= prod.description %>
                </p>
              </div>
            </a>
          </div>
          <% }) %>
      </div>
    </main>
    <%- include('../partials/footer.ejs') %>
</body>

</html>
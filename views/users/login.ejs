<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/form.css" />
    <%- include('../partials/head.ejs') %>
    <title>Document</title>
  </head>
  <body>
    <%- include('../partials/header.ejs') %>
    <main>
      <div class="register__form">
        <img src="/img/logo.png" alt="sanwi">
        <form action="/users/login" method="post">
          <h1>INICIAR SESIÓN</h1>
          <div class="register__fields">
            <div>
              <label for="name">Nombre de usuario</label>
              <input type="text" name="user" id="name" placeholder="Nombre de usuario" required/>
              
            </div>
        

          <label for="password">Contraseña</label>
          <input type="password" name="pass" id="password" placeholder="Contraseña" required />

        </div>

        <div class="register__terms">
          <input type="checkbox" name="estudio" id="termino" value="Acepto terminos y condiciones" required />
          <label for="termino" >¿Recordar contraseña?</label>
        </div>
        <br>
        <div class="register__button">
          <button type="reset">Cancelar</button>
          <button type="submit">Iniciar sesion</button>
        </div>
      </form>
      </div>
    </main>
    <footer>
      <%- include('../partials/footer.ejs') %>
      </footer>
  </body>
</html>

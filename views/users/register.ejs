<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/form.css" />
    <%- include('../partials/head.ejs') %>
    <title>Document</title>
  </head>
  <body>
    <%- include('../partials/header.ejs') %>
    <main>
      <div class="register__form">
        <img src="/img/logo.png" alt="sanwi">
        <form action="/users/register" method="post" enctype="multipart/form-data">
          <h1>REGISTRARSE</h1>
          <div class="register__fields">
            <div>
              <label for="user">Nombre de usuario</label>
              <input type="text" name="username" id="user" placeholder="Nombre"
                      value="<%= (locals.old && old.username) ? old.username : '' %>"
              />
              <% if (locals.errors && errors.username){%>
                <div>
                    <i>
                        <%= errors.username.msg %>
                    </i>
                </div>
              <% } %>
            </div>
            <div>
              <label for="email">Email</label>
              <input type="email" name="email" id="email" placeholder="Email" 
                      value="<%= (locals.old && old.email) ? old.email: '' %>"
              />
              <% if (locals.errors && errors.email){%>
                <div>
                    <i>
                        <%= errors.email.msg %>
                    </i>
                </div>
              <% } %>
            </div>
            <div>
              <label for="password">Contrase単a</label>
              <input type="password" name="password" id="password" placeholder="Contrase単a" 
                      value="<%= (locals.old && old.password) ? old.password : '' %>"
               />
              <% if (locals.errors && errors.password){%>
                <div>
                    <i>
                        <%= errors.password.msg %>
                    </i>
                </div>
             <% } %>
            </div>


          <label for="password1">Confirmar Contrase単a</label>
          <input type="password" name="password1" id="password1" placeholder="Confirmar Contrase単a" required />

					<label for="image" >Agregar imagen</label>
					<input type="file" id="image" name="image">
					
        </div>

        <div class="register__terms">
          <input type="radio" name="estudio" id="termino" value="Acepto terminos y condiciones" required />
          <label for="termino" >Acepto terminos y condiciones</label>
        </div>
        <br>
        <div class="register__button">
          <button type="reset">Cancelar</button>
          <button type="submit">Crear cuenta</button>
        </div>
      </form>
      </div>
    </main>
    <%- include('../partials/footer.ejs') %>
  </body>
</html>

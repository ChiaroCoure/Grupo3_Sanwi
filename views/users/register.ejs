<!DOCTYPE html>
<html lang="es">
  
  <%- include('../partials/head.ejs', { cssSheets: ["form"], title: "Registro de usuario" }) %>
  
  <body>
    <%- include('../partials/header.ejs') %>
    <main>
      <div class="register__form">
        <img src="/img/logo.png" alt="sanwi">
        <form class="form" action="/users/register" method="post" enctype="multipart/form-data">
          <h1>REGISTRARSE</h1>
          <div class="register__fields">
            <div class="user">
              <label for="user">Nombre de usuario</label>
              <input type="text" name="user" id="user" placeholder="Nombre"
                      value="<%= (locals.old && old.username) ? old.username : '' %>"
              />
              <% if (locals.errors && errors.username){%>
                <div class="errores">
                    <i>
                        <%= errors.username.msg %>
                    </i>
                </div>
              <% } %>
              
            </div>
            <div class="errores" id="userError"></div>
            <div class="email">
              <label for="email">Email</label>
              <input type="email" name="email" id="email" placeholder="Email" 
                      value="<%= (locals.old && old.email) ? old.email: '' %>"
              />
              
              <% if (locals.errors && errors.email){%>
                <div class="errores">
                    <i>
                        <%= errors.email.msg %>
                    </i>
                </div>
              <% } %>
              <% if (errores){%>
                <div class="errores">
                    <i>
                        <%= errores %>
                    </i>
                </div>
             <% } %>
             
            </div>
            <div class="errores" id="emailError"></div>
            <div class="password">
              <label for="password">Contrase単a</label>
              <input type="password" name="password" id="password" placeholder="Contrase単a" 
                      value="<%= (locals.old && old.password) ? old.password : '' %>"
               />
               <img src="/img/icons/eye.svg" alt="eye" class="register__eye" id="toggle-password">
              <% if (locals.errors && errors.password){%>
                <div class="errores">
                    <i>
                        <%= errors.password.msg %>
                    </i>
                </div>
             <% } %>
            </div>
            <div class="errores" id="passwordError"></div>
            <div class="passwordRepeat">
              <label for="passwordRepeat">Confirmar Contrase単a</label>
              <input type="password" name="passwordRepeat" id="passwordRepeat" placeholder="Confirmar Contrase単a"
                value="<%= (locals.old && old.passwordRepeat) ? old.passwordRepeat : '' %>"                     
               />
               <img src="/img/icons/eye.svg" alt="eye" class="register__eye" id="toggle-password">
              <% if (locals.errors && errors.passwordRepeat){%>
                <div class="errores">
                    <i>
                        <%= errors.passwordRepeat.msg %>
                    </i>
                </div>
             <% } %>
             <% if (error){%>
              <div class="errores">
                  <i>
                      <%= error %>
                  </i>
              </div>
              <% } %>
            </div>       
            <div class="errores" id="passwordRepeatError"></div>     

					<label for="image" >Agregar imagen</label>
					<input type="file" id="image" name="image">
					
        </div>

        <div class="register__terms">
          <input type="checkbox" name="estudio" id="termino" value="Acepto terminos y condiciones" required />
          <label for="termino" >Acepto terminos y condiciones</label>
        </div>
        <br>
        <div class="register__button">
          <button type="reset">Cancelar</button>
          <button type="submit">Crear cuenta</button>
        </div>
      </form>
      </div>
    </main>
    <%- include('../partials/footer.ejs') %>
    <script src="/js/register.js"></script>
    <script src="/js/util.js"></script>
  </body>
</html>

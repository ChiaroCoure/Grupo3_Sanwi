      <div class="home__user">
        <img class="home__user-img" src="/img/users/<%= user.image %>" alt="foto de perfil de  <%= user.username %>">
        <p class="home__username">
          <%= locals.user.username %>
        </p>
      </div>
    <% } %>

        <ul>
          <li>
            <a href="/">Inicio</a>
          </li> 
          <% if( !locals.user ) { %>
            <li>
              <a href="/users/login">Iniciar Sesi√≥n</a>
            </li>
            <li>
              <a href="/users/register">Registro</a>
            </li>
          <% } %>
          <li>
            <a href="/products">Productos</a>
          </li>
          <li>
            <a href="/cart">Mi carrito</a>
          </li>
